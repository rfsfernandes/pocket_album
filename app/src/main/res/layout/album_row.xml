<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="8dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp">

  <androidx.cardview.widget.CardView
      android:layout_width="70dp"
      android:layout_height="70dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="3dp"
      app:cardPreventCornerOverlap="true">

    <ImageView
        android:id="@+id/imageViewTopAlbum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/image_of_the_album"
        android:src="@drawable/album_24" />
  </androidx.cardview.widget.CardView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="8dp"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTopAlbumTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="TextView"
        app:autoSizeMaxTextSize="17sp"
        app:autoSizeMinTextSize="13sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/textViewTopAlbumArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="TextView"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/textViewTopAlbumPlayCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textSize="12sp" />
  </LinearLayout>

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      app:srcCompat="@drawable/chevron_right" />

</LinearLayout>